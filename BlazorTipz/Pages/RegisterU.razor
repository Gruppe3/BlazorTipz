    public async Task<ActionResult<User>> Register(UserDto request)
    {
        CreatePasswordHash(request.password, out byte[] passwordHash, out byte[] passwordSalt);

        User.employmentId = request.employmentId;
        User.passwordHash = passwordHash;
        User.passwordSalt = passwordSalt;

        var sql = "insert into Users (employmentId, passwordHash, passwordSalt) values (@employmentId, @passwordHash, @passwordSalt);";

        await _data.SaveData(sql, new { employmentId = User.employmentId, passwordSalt = User.passwordSalt, passwordHash = User.passwordHash }, _config.GetConnectionString("default"));
        
        return User;
    }



    private void CreatePasswordHash(string password, out byte[] passwordHash, out byte[] passwordSalt)
    {
        using (var hmac = new HMACSHA512())
        {
            passwordSalt = hmac.Key;
            passwordHash = hmac.ComputeHash(System.Text.Encoding.UTF8.GetBytes(password));
        }
    }



